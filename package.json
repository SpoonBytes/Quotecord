{
	"name": "quotecord",
	"version": "1.1.1",
	"description": "Discord self-bot for quoting.",
	"main": "app.js",
	"scripts": {
		"test": "electron .",
		"start": "electron-builder -mwl"
	},
	"author": "Spencer Berenson",
	"license": "MIT",
	"dependencies": {
		"discord.js": "^11.3.2"
	},
	"devDependencies": {
		"electron": "^1.8.4",
		"electron-builder": "^20.10.0"
	},
	"build": {
		"appId": "me.berenson.quotecord",
		"productName": "Quotecord",
		"extraFiles": ["build/icon.png"],
		"win": {
			"target": "nsis"
		},
		"mac": {
			"target": "dmg",
			"category": "Utilities",
			"identity": "null"
		},
		"linux": {
			"target": "AppImage",
			"category": "Utilities"
		}
	}
}
